<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.snake">

    <TextView
        android:id="@+id/snaket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/snaket"
        android:textSize="25sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/snaketpic"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/snaketpic"
        android:layout_width="172dp"
        android:layout_height="163dp"
        app:srcCompat="@drawable/snaketwo"
        android:layout_marginLeft="-7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="291dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.066"/>

    <ImageView
        android:id="@+id/snaketpic2"
        android:layout_width="191dp"
        android:layout_height="144dp"
        app:srcCompat="@drawable/snake"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="129dp"
        app:layout_constraintLeft_toRightOf="@+id/snaketpic"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/snaketpic"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/snaketdetail"
        android:layout_width="371dp"
        android:layout_height="200dp"
        android:text="@string/snaketdetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/snaketpic2"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
