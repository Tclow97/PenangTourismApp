<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.bgarden">

    <ImageView
        android:id="@+id/Bonaticgardenpic"
        android:layout_width="172dp"
        android:layout_height="164dp"
        app:srcCompat="@drawable/bonaticgarden"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Bonaticgarden"/>

    <TextView
        android:id="@+id/Bonaticgarden"
        android:layout_width="336dp"
        android:layout_height="68dp"
        android:text="@string/bonoticgarden"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="-16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/Bonaticgardendetail"
        android:layout_width="343dp"
        android:layout_height="209dp"
        android:text="@string/Bonaticgardendetail"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/Bonaticgardenpic2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="305dp"
        tools:layout_editor_absoluteX="29dp"
        app:layout_constraintHorizontal_bias="0.555"/>

    <ImageView
        android:id="@+id/Bonaticgardenpic2"
        android:layout_width="180dp"
        android:layout_height="141dp"
        app:srcCompat="@drawable/bonaticgardentwo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Bonaticgardenpic"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/Bonaticgarden"
        app:layout_constraintBottom_toBottomOf="@+id/Bonaticgardenpic"
        android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
