<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.camera">

    <TextView
        android:id="@+id/cameraMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cameraMuseum"
        android:textSize="25sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.044"/>

    <ImageView
        android:id="@+id/cameraMuseumpic"
        android:layout_width="360dp"
        android:layout_height="197dp"
        app:srcCompat="@drawable/camera"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/cameraMuseum"
        app:layout_constraintHorizontal_bias="0.125"/>

    <TextView
        android:id="@+id/cameraMuseumdetail"
        android:layout_width="354dp"
        android:layout_height="197dp"
        android:text="@string/cameraMuseumdetail"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cameraMuseumpic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.282"/>
</android.support.constraint.ConstraintLayout>
