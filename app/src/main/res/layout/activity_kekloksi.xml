<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.kekloksi">

    <TextView
        android:id="@+id/kekLokSi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kekLokSi"
        android:textSize="25sp"
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/kekLokSipic"/>

    <ImageView
        android:id="@+id/kekLokSipic"
        android:layout_width="366dp"
        android:layout_height="244dp"
        app:srcCompat="@drawable/kekloksi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/kekLokSidetail"
        app:layout_constraintVertical_bias="0.739"/>

    <TextView
        android:id="@+id/kekLokSidetail"
        android:layout_width="359dp"
        android:layout_height="181dp"
        android:text="@string/kekLokSidetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.555"/>
</android.support.constraint.ConstraintLayout>
