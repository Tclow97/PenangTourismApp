<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.npark">

    <TextView
        android:id="@+id/nPark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nPark"
        android:textSize="25sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.062"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nParkpic"/>

    <ImageView
        android:id="@+id/nParkpic"
        android:layout_width="180dp"
        android:layout_height="167dp"
        app:srcCompat="@drawable/nparktwo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nParkpic2"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/nParkpic2"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/nParkpic2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/nParkpic2"
        android:layout_width="187dp"
        android:layout_height="171dp"
        app:srcCompat="@drawable/npark"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"/>

    <TextView
        android:id="@+id/nParkdetail"
        android:layout_width="343dp"
        android:layout_height="229dp"
        android:text="@string/nParkdetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.927"
        tools:layout_editor_absoluteY="255dp"
        tools:layout_editor_absoluteX="36dp"
        app:layout_constraintHorizontal_bias="0.25"/>
</android.support.constraint.ConstraintLayout>
