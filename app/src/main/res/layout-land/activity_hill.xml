<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.hill">

    <TextView
        android:id="@+id/penanghill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/penanghill"
        android:textSize="25sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/penanghillpic"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/penanghillpic"
        android:layout_width="166dp"
        android:layout_height="145dp"
        app:srcCompat="@drawable/hilltwo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="162dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="165dp"/>

    <ImageView
        android:id="@+id/penanghillpic2"
        android:layout_width="188dp"
        android:layout_height="136dp"
        app:srcCompat="@drawable/hill"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/penanghillpic"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintBottom_toBottomOf="@+id/penanghillpic"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/penanghilldetail"
        android:layout_width="549dp"
        android:layout_height="138dp"
        android:text="@string/penanghilldetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/penanghillpic"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="173dp"
        tools:layout_editor_absoluteX="23dp"/>
</android.support.constraint.ConstraintLayout>
