<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.streetart">

    <TextView
        android:id="@+id/streetArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/streetArt"
        android:textSize="25sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.046"/>

    <ImageView
        android:id="@+id/streetArtpic"
        android:layout_width="229dp"
        android:layout_height="195dp"
        app:srcCompat="@drawable/streetarttwo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="44dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/streetArtpic2"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/streetArtpic2"
        android:layout_width="248dp"
        android:layout_height="225dp"
        app:srcCompat="@drawable/streetart"
        app:layout_constraintLeft_toRightOf="@+id/streetArtpic"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="78dp"/>

    <TextView
        android:id="@+id/streetArtdetail"
        android:layout_width="387dp"
        android:layout_height="61dp"
        android:text="@string/streetArtdetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/streetArtpic"
        app:layout_constraintHorizontal_bias="0.359"
        app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
