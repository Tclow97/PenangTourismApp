<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.npark">

    <TextView
        android:id="@+id/nPark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nPark"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/nParkpic"
        android:layout_width="153dp"
        android:layout_height="135dp"
        app:srcCompat="@drawable/nparktwo"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nPark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/nPark"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/nParkpic2"
        android:layout_width="187dp"
        android:layout_height="171dp"
        app:srcCompat="@drawable/npark"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/nParkpic"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.589"/>

    <TextView
        android:id="@+id/nParkdetail"
        android:layout_width="580dp"
        android:layout_height="110dp"
        android:text="@string/nParkdetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
