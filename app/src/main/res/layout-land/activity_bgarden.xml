<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90a4ae"
    tools:context="com.inti.student.penangtourism.bgarden">

    <ImageView
        android:id="@+id/Bonaticgardenpic"
        android:layout_width="153dp"
        android:layout_height="163dp"
        app:srcCompat="@drawable/bonaticgarden"
        android:layout_marginRight="101dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Bonaticgarden"
        app:layout_constraintBottom_toBottomOf="@+id/Bonaticgardenpic2"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/Bonaticgarden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bonoticgarden"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="118dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.787"/>

    <TextView
        android:id="@+id/Bonaticgardendetail"
        android:layout_width="482dp"
        android:layout_height="85dp"
        android:text="@string/Bonaticgardendetail"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Bonaticgarden"
        app:layout_constraintVertical_bias="0.951"/>

    <ImageView
        android:id="@+id/Bonaticgardenpic2"
        android:layout_width="160dp"
        android:layout_height="122dp"
        app:srcCompat="@drawable/bonaticgardentwo"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Bonaticgardenpic"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.097"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/Bonaticgarden"/>
</android.support.constraint.ConstraintLayout>
